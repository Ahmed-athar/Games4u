<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Games"
                android:fontFamily="sans-serif-black"
                android:textSize="35dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/jetpack_btn"
                android:layout_width="361dp"
                android:layout_height="224dp"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/jetpackgr" />

            <ImageButton
                android:id="@+id/minion_btn"
                android:layout_width="361dp"
                android:layout_height="242dp"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/miniongr" />

            <ImageButton
                android:id="@+id/jumanj_btn"
                android:layout_width="361dp"
                android:layout_height="226dp"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/jumanjigr" />

            <ImageButton
                android:id="@+id/subway_btn"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/subwaygr" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>